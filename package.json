{
  "name": "ng-cli-electron-example",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "postinstall": "cpx webpack-config.js node_modules/@angular/cli/models",
    "ng": "ng",
    "start": "ng serve",
    "electron-start": "electron ./electron",
    "build": "ng build --prod",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "clear": "rm -rf ./dist && rm -rf ./release",
    "electron": "concurrently \"wait-on http-get://localhost:4200 && npm run electron-start\" \"npm run start\"",
    "ng-build": "ng build --prod --base-href . && cpx \"electron/*.{js,json}\" dist",
    "electron-build:mac": "electron-packager ./dist ng-cli-electron-example --platform=darwin --arch=x64 --out=./release --electronVersion=1.7.10 --icon=tools.icns  --ignore=node_modules/electron-* --overwrite",
    "electron-build:win32": "electron-packager ./dist ng-cli-electron-example --platform=win32 --arch=x64 --out=./release --electronVersion=1.7.10 --icon=tools.ico  --ignore=node_modules/electron-* --overwrite",
    "electron-build:linux": "electron-packager ./dist ng-cli-electron-example --platform=linux --arch=x64 --out=./release --electronVersion=1.7.10 --icon=tools.png  --ignore=node_modules/electron-* --overwrite",
    "build:mac": "npm run ng-build && npm run electron-build:mac",
    "build:win32": "npm run ng-build && npm run electron-build:win32",
    "build:linux": "npm run ng-build && npm run electron-build:linux"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^5.2.0",
    "@angular/common": "^5.2.0",
    "@angular/compiler": "^5.2.0",
    "@angular/core": "^5.2.0",
    "@angular/forms": "^5.2.0",
    "@angular/http": "^5.2.0",
    "@angular/platform-browser": "^5.2.0",
    "@angular/platform-browser-dynamic": "^5.2.0",
    "@angular/router": "^5.2.0",
    "core-js": "^2.4.1",
    "rxjs": "^5.5.6",
    "zone.js": "^0.8.19"
  },
  "devDependencies": {
    "@angular/cli": "1.6.6",
    "@angular/compiler-cli": "^5.2.0",
    "@angular/language-service": "^5.2.0",
    "@types/electron": "^1.6.10",
    "@types/jasmine": "~2.8.3",
    "@types/jasminewd2": "~2.0.2",
    "@types/node": "~6.0.60",
    "codelyzer": "^4.0.1",
    "concurrently": "^3.5.1",
    "cpx": "^1.5.0",
    "electron": "^1.7.10",
    "electron-packager": "^10.1.1",
    "jasmine-core": "~2.8.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~2.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "^1.2.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "protractor": "~5.1.2",
    "ts-node": "~4.1.0",
    "tslint": "~5.9.1",
    "typescript": "~2.5.3",
    "wait-on": "^2.1.0"
  }
}
